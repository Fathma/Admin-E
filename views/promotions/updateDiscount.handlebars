                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="name">Discount Name<span style="color:red">*</span>
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control inp" name="name" id="name"
                                            value="{{discount.name}}">
                                    </div>
                                </div>
                                <br>
                                <div class="row">

                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="type">Discount Type</label>
                                    </div>
                                    <div class="col-md-6">
                                        <select class="form-control inp" name="type" id="type" required>
                                            <option value="category"
                                                {{# equality "category" discount.type}}selected{{/equality}}>Assigned to
                                                Category</option>
                                            <option value="subcategory"
                                                {{# equality "subcategory" discount.type}}selected{{/equality}}>Assigned
                                                to Sub Category</option>
                                            <option value="brand"
                                                {{# equality "brand" discount.type}}selected{{/equality}}>Assigned to
                                                Brand</option>
                                            <option value="product"
                                                {{# equality "product" discount.type}}selected{{/equality}}>Assigned to
                                                Product</option>
                                                 <option value="totalOrder" {{# equality "totalOrder" discount.type}}selected{{/equality}}>Assigned to Total Amount</option>
                                        </select>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="usePercentage">Use Percentage
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        {{# if discount.usePercentage}}
                                        <input type="checkbox" name="usePercentage" id="usePercentage" checked>
                                        {{else}}
                                        <input type="checkbox" name="usePercentage" id="usePercentage">
                                        {{/if}}
                                    </div>
                                </div>
                                <br>
                                <div class="row" id="discount_percentage">
