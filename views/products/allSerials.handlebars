<div class="container-fluid" style="width:100%;min-height: 700px">
    <div class="register-logo">
        <a href="#"><b>Product Details</a>
    </div>

    {{!-- {{# if products}} --}}
    <div style="background-color: white">
        <table id="ptable" class="table table-striped" style="width:100%">
            <thead>
            <tr>
                <th>#</th>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Serial Number</th>
                <th>LP number</th>
                <th>Invoice Number</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            {{# each serials}}
          
            <tr>
                <td>{{this.count}}</td>
                <td>{{this.sid}}</td>
                <td>{{this.pid.name}}</td>
                <td>{{this.number}}</td>
                <td><a href="/purchase/localPurchase/{{this.lp.number}}">{{this.lp.number}}</a></td>
                <td><a href="/orders/ViewInvoice/{{this.invoice._id}}">{{this.invoice.invoiceId}}</a></td>
                <td>{{this.status}}</td>
            </tr>
           
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
<br>