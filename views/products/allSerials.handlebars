<div class="container-fluid" style="width:100%;min-height: 700px">
    <div class="register-logo">
        <a href="#"><b>Product Details</a>
    </div>

    {{!-- {{# if products}} --}}
    <div style="background-color: white">
        <table id="ptable" class="table table-striped table-bordered" style="width:100%">
            <thead>
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Product ID</th>
                <th>Serial Number</th>
                <th>LP number</th>
                <th>Invoice Number</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {{# each serials}}
           
            <tr>
                 <td>
                    <strong>{{this.count}}</strong>
                </td>
                 <td>
                    <strong>{{this.pid.name}}</strong>
                </td>
                <td>
                    <strong>{{this.sid}}</strong>
                </td>
                <td>
                    <strong>{{this.number}}</strong>
                </td>
                <td>
                    <strong>{{this.lp}}</strong>
                </td>
                <td>
                    <strong>{{this.invoice}}</strong>
                </td>
                <td>
                    <strong>{{this.status}}</strong>
                </td>
                
                <td>
                    {{!-- {{# if this.availablity}} --}}
                    <a href="/products/serials/replace{{this._id}}" class="btn btn-default ">Edit</a>
                    {{!-- {{else}}
                    <a href="/products/Available/{{this._id}}" class="btn btn-default">Available</a>
                    {{/if}} --}}
                    {{!-- {{# if this.isActive}}
                    <a href="/products/unactive/{{this._id}}" class="btn btn-default ">Disable</a>
                    {{else}}
                    <a href="/products/active/{{this._id}}" class="btn btn-default">Enable</a>
                    {{/if}}
                     <a href="/products/Update/{{this._id}}" class="btn btn-default ">Update</a> --}}
                </td>
            </tr>
           
            {{/each}}
            </tbody>
             {{!-- <tfoot>
            <tr>
                <th>Product Name</th>
                <th>Product ID</th>
                <th>Serial Number</th>
                <th>LP number</th>
                <th>Invoice Number</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
             </tfoot> --}}
        </table>
    </div>
</div>