<div class="box">

    <ul class="nav nav-tabs">
        {{# if active}}
        <li ><a data-toggle="tab" href="#specification">SPECIFICATIONS</a></li>
        <li class="active"><a data-toggle="tab" href="#menu1">RELATED PRODUCTS</a></li>
        {{else}}
        <li class="active"><a data-toggle="tab" href="#specification">SPECIFICATIONS</a></li>
        <li><a data-toggle="tab" href="#menu1">RELATED PRODUCTS</a></li>
        {{/if}}
        
    </ul>
    <div class="tab-content">
         
        <div id="specification" class="tab-pane fade in active">
          
            <div class="register-logo">
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="well">
                            {{!-- <form id="contact"  > --}}
                            <h3 class="text-center">Add New Product/ Model</h3><br>
                            <input type="hidden" class="form-control inp" name="serial" id="serial">
                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="invoice">LP Invoice<span style="color:red">*</span> </label>
                                </div>
                                <div class="col-md-2">
                                    <select class="form-control inp" name="invoice" id="invoice">
                                        <option value="0">Select One</option>
                                        {{# each LocalPurchase}}
                                        <option value="{{this._id}}">{{this.number}}</option>
                                        {{/each}}
                                    </select>
                                </div>

                                <div class="col-md-5 col5" style="width:16.667%">
                                    <label class="lbl" for="date">Date</label>
                                </div>
                                <div class="col-md-2">
                                    <input type="text" class="form-control inp" name="date" id="date">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="supplier">Supplier
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control inp" name="supplier" id="supplier">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="products_invoice">Product<span style="color:red">*</span>
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <select class="form-control inp" name="products_invoice" id="products_invoice">
                                    </select>
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="category">Category
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control inp" name="category" id="category">
                                </div>
                            </div>
                            <br>

                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="subcategory">Sub Category
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control inp" name="subcategory" id="subcategory">
                                </div>
                            </div>

                            <br>
                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="brand">Brand
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control inp" name="brand" id="brand">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="quantity">Quantity
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control inp" name="quantity" id="quantity">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="unitPrice">Unit Price
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control inp" name="unitPrice" id="unitPrice">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="sellingPrice">Selling Price<span style="color:red">*</span>
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control inp" name="sellingPrice" id="sellingPrice">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="model">Model
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control inp" name="model" id="model">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="name">Title<span style="color:red">*</span>
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control inp" name="name" id="name">
                                </div>
                            </div>
                            <br>

                            <div id="add">
                                {{!-- adds previous features --}}
                            </div>

                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="new_feat_label">New Feature:</label>
                                </div>
                                <div class="col-md-6">
                                    <input type="hidden" id="new_feat" name="new_feat"
                                        value="0">{{!-- counts the total newly added features --}}
                                    <input type="text" id="new_feat_label" name="new_feat_label"
                                        class="form-control inp" placeholder="write a new feature name">
                                </div>
                                <div class="col-md-1">
                                    <a id="addNewfeature" class="btn btn-success" style="padding: 1px 12px">Add</a>
                                </div>
                            </div>
                            <br>

                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="weight">Weight:
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control inp" name="weight" id="weight">
                                </div>
                            </div>
                            <br>

                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="warranty">Warranty<span style="color:red">*</span></label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control inp" name="warranty" id="warranty">
                                </div>
                            </div>
                            <br>

                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="description">Description</label>
                                </div>
                                <div class="col-md-6">
                                    <textarea type="text" class="form-control inp" name="description"
                                        id="description"></textarea>
                                </div>
                            </div>
                            <br>

                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="shippingInfo">Shipping Info</label>
                                </div>
                                <div class="col-md-6">
                                    <textarea type="text" class="form-control inp" name="shippingInfo"
                                        id="shippingInfo"></textarea>
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-5 col5">
                                    <label class="lbl" for="HomePagetag">Tag<span style="color:red">*</span></label>
                                </div>
                                <div class="col-md-6">
                                    <select class="form-control inp" name="HomePagetag" id="HomePagetag">
                                        <option value="None">None</option>
                                        <option value="Hot Deals">Hot Deals</option>
                                        <option value="Trending">Trending</option>
                                        <option value="New Product">New Product</option>
                                        <option value="Exclusive Products ">Exclusive Products </option>
                                    </select>
                                </div>
                            </div>
                            <br>
                            <div id="space">
                                {{!-- place for serials --}}
                            </div>


                            <div class="row">
                                <center>
                                    <button id="save_inventory" class="btn btn-default btn-md" type="submit">Insert
                                        Image</button>
                                </center>
                            </div>
                            {{!-- </form> --}}
                        </div>
                    </div>


                    <div class="col-md-6">
                        <a name="image_sec1"></a>
                        <div class="well">
                            <div id="all_img" class="row">

                            </div>
                            <h3 class="text-center">Set Image</h3><br>
                            <form action="/products/upload" method="POST" enctype="multipart/form-data">
                                <input type="hidden" name="img_number" id="img_number">
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="pid">Product Name
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control inp" name="pname" id="pname">
                                        <input type="hidden" name="pid" id="pid" value="5d1b2b63e9ad1500a4c2aa80">
                                        {{!-- <select class="form-control inp" name="pid" id="pid">
                                    <option value="0">Select One</option>
                                    {{# each Product}}
                                    <option value="{{this._id}}">{{this.productName}}</option>
                                    {{/each}}
                                </select> --}}
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="imagePath">Select Image
                                        </label>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="file" name="imagePath" id="imagePath"
                                            accept="image/png, image/jpeg" multiple>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <center>
                                        <button type="submit" id="save_img"
                                            class="btn btn-default btn-md">Submit</button>
                                    </center>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div id="menu1" class="tab-pane fade  in active">
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-md-offset-3 col-sm-offset-3">
                        <div class="well">
                            {{!-- <div class="row">
                                <div class="col-md-5 col5">
                                    <h3>Related Products</h3>
                                    {{# each product.relatedProducts}}
                                    <p>{{this.name}}</p>
                                    {{/each}}
                                </div>
                            </div> --}}
                            <h3 class="text-center">Add Related Product</h3><br>
                            {{# if product }}
                            <form action="/products/relatedProducts" method="POST">
                                <input type="hidden" name="img_number" id="img_number">
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="pid">Product Name
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                       
                                        <input type="text" class="form-control inp" name="pname" id="pname"
                                            value="{{ product.name }}">
                                        <input type="hidden" name="pid" id="pid" value="{{ product._id }}">
                                    </div>
                                </div>
                                <br>
                                <div class="row">

                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="imagePath">Select Product
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <select name="relatedProducts" class="form-control inp" id="relatedProducts">
                                            {{# each Product}}
                                            <option value="{{this._id}}">{{this.productName}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <center>
                                        <button type="submit" class="btn btn-default btn-md">Submit</button>
                                    </center>
                                </div>
                            </form><br>
                            <table id="ptable" style="width:100%" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Product Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{# each product.relatedProducts}}

                                    <tr>

                                        <td>
                                            <strong>{{this.productName}}</strong>
                                        </td>

                                        <td>
                                            <a href="/products/relatedProducts/delete/{{../product._id}}/{{this._id}}"
                                                class="btn btn-default ">Delete</a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>


                            {{else}}
                            <p>You need to complete product registration with image in specification section. </p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>