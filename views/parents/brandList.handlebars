
<div class="container-fluid" style="width:100%;min-height: 700px">
    <div class="register-logo">
        <a href="#"><b>Brands</a>
    </div>
    <div class="row">
    <a  class="btn bg-purple" href="/category/newBrand" style="float: right;margin: 10px 28px;"><li class="fa fa-plus-square" style="padding: 5px"></li>New Brand</a>
</div><br>

    <div style="background-color: white">
        <table id="ptable" style="width:100%" class="table table-striped" >
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
          {{# each brand}}
            <tr>
                 <td>{{this.count}}</td>
                <td>{{this.name}}</td>
               {{# if this.enabled}}
                <td>Enabled</td>
                {{else}}
                <td>Disabled</td>
                {{/if}}
                <td>
                    <a href="/category/updateBrand/{{this._id}}" data-toggle="tooltip" 
                        title="Edit info" class="btn btn-default" >Edit</a>
                    {{# if this.enabled}}
                    <a href="/category/brand/changeStatus/{{this._id}}/false" data-toggle="tooltip" 
                        title="Edit info" class="btn btn-default" >Disable</a>
                    {{else}}
                         <a href="/category/brand/changeStatus/{{this._id}}/true" data-toggle="tooltip" 
                        title="Edit info" class="btn btn-default" >Enable</a>
                    {{/if}}
                </td>
            </tr>
           
            {{/each}}
            </tbody>
        </table>

    </div>

</div>